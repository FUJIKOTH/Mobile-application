<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:contentDescription="meat_image"
        android:src="@drawable/ic_launcher_foreground" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/meat_name"
            android:layout_width="98dp"
            android:layout_height="34dp"
            android:text="Meat Name"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/meat_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meat Type"
            android:textSize="14sp"
            android:textColor="#555555" />

        <TextView
            android:id="@+id/meat_origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meat Origin"
            android:textSize="14sp"
            android:textColor="#555555" />

        <TextView
            android:id="@+id/meat_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textSize="14sp"
            android:textColor="#555555" />
    </LinearLayout>

    <Button
        android:id="@+id/order_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="สั่งชื้อ" />
</LinearLayout>
