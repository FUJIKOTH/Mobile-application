<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <ImageView
        android:id="@+id/meat_image"
        android:layout_width="285dp"
        android:layout_height="256dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="meat_image"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/meat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meat Name"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/meat_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meat Type"
        android:textSize="16sp"
        android:textColor="#555555"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/meat_origin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meat Origin"
        android:textSize="16sp"
        android:textColor="#555555"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/meat_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textSize="16sp"
        android:textColor="#555555"
        android:layout_marginBottom="16dp"/>

    <!-- เพิ่มส่วนเลือกจำนวนสินค้า -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/decrease_quantity"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_remove" /> <!-- ใช้ไอคอนลบ -->

        <TextView
            android:id="@+id/quantity_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="20sp"
            android:layout_marginHorizontal="16dp"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/increase_quantity"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_add" /> <!-- ใช้ไอคอนบวก -->
    </LinearLayout>

    <Button
        android:id="@+id/confirm_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ยืนยันการสั่งซื้อ" />
</LinearLayout>